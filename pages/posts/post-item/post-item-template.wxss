.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date {
  margin-top: 10rpx;
  margin-bottom:20rpx;
  margin-left: 10px;
}
.post-author {
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
  margin-right: 10px;
}
.post-imag {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  text-indent: 2em;
}
.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image {
  height: 16px;
  width: 16px;
  margin-left: 8px;
  vertical-align: middle;
}
.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}